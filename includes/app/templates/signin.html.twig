{% extends 'layout.html.twig' %}
{% block title %}Fussee - Sign In{% endblock %}
{% block content %}

    {% if error is defined %}
    <div class="alert alert-danger" role="alert">
        <strong>Oh snap!</strong> {{ error }}
    </div>
    {% endif %}

    {% if not loggedIn %}
    <div id="loginImage">
        <object type="image/svg+xml" data="assets/authentication.svg" width="250px" align="center"></object>
    </div>

    <div class="d-flex justify-content-center">
        <div class="loginForm">
            <h3>Existing users:</h3>
            <form method="post">
                <div class="form-group">
                    <label for="loginEmail">Email address:</label>
                    <input type="email" class="form-control" name="loginEmail" placeholder="Enter email address here...">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Password:</label>
                    <input type="password" class="form-control" name="loginPassword" placeholder="Enter password here...">
                </div>
                <button name="loginSubmit" type="submit" class="btn btn-primary mb-2">Submit</button>
            </form>
        </div>

        <div class="loginForm">
            <h3>New users:</h3>
            <form method="post">
                <div class="form-group">
                    <label for="loginEmail">Email address:</label>
                    <input type="email" class="form-control" name="registerEmail" placeholder="Enter email address here...">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Password:</label>
                    <input type="password" class="form-control" name="registerPassword" placeholder="Enter password here...">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Password:</label>
                    <input type="text" class="form-control" name="registerFirstName" placeholder="Enter first name here...">
                </div>
                <button name="registerSubmit" type="submit" class="btn btn-primary mb-2">Submit</button>
            </form>
        </div>
    </div>
    {% else %}
        <div class="alert alert-danger" role="alert">
            <strong>Oh snap!</strong> You are already logged in. You do not have permission to use this page.
        </div>
    {% endif %}
{% endblock %}
