{% extends 'layout.html.twig' %}
{% block title %}Fussee - User Control Panel{% endblock %}
{% block content %}
        <div id="wrapper">

        <div class="topnav">
            <div class="logo">fussee</div>
            <div class="topnav-right">
                <a href="homepage">Home</a>
                <a href="about">About</a>
                <a href="browse">Browse</a>
                <div class="dropdown">
                    <a class="active" href="user-cp">
                        <div class="loggedInUser">
                            <object type="image/svg+xml" data="assets/avatar.svg"></object>
                            {{ firstName }}
                        </div>
                    </a>

                    <div class="dropdown-content">
                        <a href="favourites"><i class="fas fa-heart"></i> Favourites</a>
                        <a href="user-cp"><i class="fas fa-cog"></i> Settings</a>
                        <a href="logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                    </div>
                </div>
            </div>
        </div>

            <div id="user-cp">

                <div id="heading1">{{ firstName }}'s User Control Panel</div>

            <div id="option1">
                <span id="option-title">Email Address Change</span>
                <p>Change your email address using the form below.</p>
                <form method="post">
                    <label for="newEmail">New email address:</label>
                    <input type="email" name="newEmail"><br><br>
                    <label for="password">Password:</label>
                    <input type="password" name="password"><br><br>
                    <button name="changeEmailSubmit">Submit</button>
                </form>
            </div>

            <div id="option2">
            <span id="option-title">Password Change</span>
            <p>Change your password using the form below.</p>
            <form method="post">
                <label for="oldPassword">Current password:</label>
                <input type="password" name="oldPassword"><br><br>
                <label for="newPassword">New password:</label>
                <input type="password" name="newPassword"><br><br>
                <button name="changePasswordSubmit">Submit</button>
            </form>
            </div>

            <div id="option1">
            <span id="option-title">First Name Change</span>
            <p>Change your first name that is displayed on the website using the form below.</p>
            <form method="post">
                <label for="newFirstName">New first name:</label>
                <input type="text" name="newFirstName"><br><br>
                <button name="changeFirstNameSubmit">Submit</button>
            </form>
            </div>

        </div>

    </div>

{% endblock %}
