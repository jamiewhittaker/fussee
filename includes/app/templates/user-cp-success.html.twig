{% extends 'layout.html.twig' %}
{% block title %}Fussee{% endblock %}
{% block content %}
    <div id="wrapper">
        <body>

        <div class="topnav">
            <div class="logo">fussee</div>
            <div class="topnav-right">
                <a href="homepage">Home</a>
                <a href="about">About</a>
                <a href="browse">Browse</a>
                <div class="dropdown">
                    <a class="active" href="user-cp">
                        <div class="loggedInUser">
                            <object type="image/svg+xml" data="assets/avatar.svg"></object>
                            {{ firstName }}
                        </div>
                    </a>

                    <div class="dropdown-content">
                        <a href="favourites"><i class="fas fa-heart"></i> Favourites</a>
                        <a href="user-cp"><i class="fas fa-cog"></i> Settings</a>
                        <a href="logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                    </div>
                </div>
            </div>
        </div>

        <div id="user-cp-success">
            <span id="error-message"> {{ success }} </span>
        </div>

        <h1>Email Address Change</h1>
        <p>Change your email address using the form below.</p>
        <form method="post">
            New Email Address:<br>
            <input type="email" name="newEmail" style="width: 250px"><br><br>
            Password:<br>
            <input type="password" name="password" style="width: 250px"><br><br>
            <button name="changeEmailSubmit">Login</button>
            <br><br><br><br><br>
        </form>

        </body>
    </div>
{% endblock %}
